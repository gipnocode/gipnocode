     div.slick
      img(src=(`assets/img/${image1}`), alt="apartment photo")
      img(src=(`assets/img/${image2}`), alt="apartment photo")
      img(src=(`assets/img/${image3}`), alt="apartment photo")
      img(src=(`assets/img/${image4}`), alt="apartment photo")
