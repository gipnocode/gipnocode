extends ../../layout/main/main
include ../../blocks/info/info
include ../../layout/comment/comment

block variables
 - let pageClass = 'room-details-page';
 - let containerName = 'room-details-container'
block content
   div.room-image-wrapper
    img(src='/assets/img/image 1.jpg')
    div.second-column
     img.second(src='/assets/img/image 2.jpg')
     img(src='/assets/img/image 3.jpg')
   section.comment-section-wrapper
    div.cons
     h3 Сведения о номере
     each item in [{righthead: 'mood', tophead:'Комфорт',bottomtext:'Шумопоглощающие стены'},{righthead: 'domain', tophead:'Удобство',bottomhead:'Окно в каждой спальне'},{righthead: 'whatshot', tophead:'Уют',bottomhead:'Номер оснащен камином'},]
       +icon-info( item )

   section.comment-section-wrapper
    h2 Отзывы посетителей номера
    +comment({
      image: 'cadr.png',
      tophead: 'Мурад Сарафанов',
      bottomtext: '5 дней назад',
      text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
      num: '12'
    })


    +comment({
      image: 'image 4.jpg',
      tophead: 'Патрисия Стеклышкова',
      bottomtext: 'Неделю назад',
      text: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент',
      num: '3'
    })







