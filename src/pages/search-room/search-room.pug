  main.cont
    //h1 Номера, которые мы для вас подобрали
    section.filter
      .form-wrapper20
        div.dinamic-calendar
          div.search-form-input-wrapper
            label(class="form-label" for="#calendar1") date Dropdown
            +input-field({
              type: 'text',
              placeholder: 'ДД.ММ.ГГГГ',
              mods: 'calendar-one',
              id: "calendar1"
            })
          div.search-form-input-wrapper
            label(class="form-label" for="#calendar2") date Dropdown
            +input-field({
              type: 'text',
              placeholder: 'ДД.ММ.ГГГГ',
              mods: 'calendar-two',
              id: "calendar2"
            })

      .form-wrapper30
        label.form-label(for='three') dropdown
        +dropdown({
          mods: 'absolute, active',
          defaultFieldTitle: 'Сколько гостей',
          dropdownList: [
            {
              name: 'adult',
              default: '2',
              title: 'Взрослые',
              wordforms: 'Гость Гостя Гостей'
            },
            {
              name: 'child',
              default: '2',
              title: 'Дети',
              wordforms: 'Гость Гостя Гостей'

            },
            {
              name: 'babes',
              default: '2',
              title: 'Младенцы',
              wordforms: 'Гость Гостя Гостей'
            }
          ]
        })
      .form-wrapper40
        .short-width-wrapper
          .form-flex-row
            label.form-label(for='nine') Range Slider
            .extra-controls
              input.js-input-from(type='text' value='0')
              span.range-slider-tire -
              input.js-input-to(type='text' value='0')
          include ../../blocks/range-slider/range-slider



      .form-wrapper30
        .form-grid-column-10
          .form-wrapper5
            span.input-groop-title checkbox buttons
          +checkbox('Можно курить')
          +checkbox('Можно с питтомцами')
          +checkbox('Можно пригласить гостей (до 10 человек)')

      .form-wrapper20
        .form-flex-row
          label.form-label(for='three') Удобство номера
        +dropdown({
          mods: 'absolute, active',
          defaultFieldTitle: 'Сколько спален и кроватей',
          dropdownList: [
            {
              name: 'rooms',
              default: '2',
              title: 'Спальни',
              wordforms: 'Спальня Спальни Спален',
            },
            {
              name: 'beds',
              default: '2',
              title: 'Кровати',
              wordforms: 'Кровать Кровати Кроватей',
            },
            {
              name: 'bath',
              default: '2',
              title: 'Ванные комнаты'
            }
          ]
        })

      include ../../layout/checkbox-list/checkbox-list



